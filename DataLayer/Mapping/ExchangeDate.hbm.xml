<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
				   assemly="DataLayer"
				   namespace="DataLayer">
	<class name="CurrencyData">
		<id name="ID">
			<generator class="identity"/>
		</id>
		<property name="r030" column="r030"/>
		<property name="txt" column="r030"/>
		<property name="cc" column="r030"/>
		<bag name="CurrencyRates" inverse="true">
			<key column="CurId"/>
			<one-to-many class="CurrencyRate"/>
		</bag>
	</class>
	<class name="CurrencyRate">
		<id name="ID">
			<generator class="identity"/>
		</id>
		<property name="CurId" column="CurId"/>
		<property name="Rate" column="Rate"/>
		<property name="DateId" column="DateId"/>
		<many-to-one name="ExchangeDate" class="ExchangeDate"
column="DateId" cascade = "save-update"/>
		<many-to-one name="CurrencyData" class="CurrencyData"
column="CurId" cascade = "save-update"/>
	</class>
	<class name="ExchangeDate">
		<id name="ID">
			<generator class="identity"/>
		</id>
		<property name="exDate" column="exDate"/>
		<bag name="CurrencyRates" inverse="true">
			<key column="DateId"/>
			<one-to-many class="CurrencyRate"/>
		</bag>
	</class>
</hibernate-mapping>